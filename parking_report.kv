<Parking_Report>

    

    BoxLayout:
        id:report_container
        orientation: 'vertical'
        padding: 20
        spacing:20
        size_hint: 1,1
        pos_hint: {'center_x':0.5 , 'top':0.95}




        MDLabel:
            text:"Parking Report"
            halign:"center"
            size_hint:1,0.1 
            font_size: 40
            valign:"bottom"
            pos_hint:{'top':1}

        MDCard:
            orientation:'vertical'
            size_hint:0.4,0.2
            pos_hint:{'center_x':0.5}
            spacing:20
            elevation:20
            padding:10

            canvas:
                Color:
                    rgba:(0.93,0.38,0.2,1)
                RoundedRectangle:
                    radius:[30]
                    pos:self.pos
                    size:self.size
            GridLayout:
                size_hint:(1,0.5)
                cols:2
                padding:40
                spacing:20,



                MDDropDownItem:
                    id:from_date
                    text: "From Date"
                    md_bg_color:(0,0.9,0.8,1)
                    size_hint:(0.4,None)
                    #width:5*self.parent.width/10
                    #height:self.parent.height/10
                    font_size: 2*self.parent.height/20
                    on_release: root.from_date()

                MDDropDownItem:
                    id:to_date
                    text: "To Date"
                    md_bg_color:(0,0.9,0.8,1)
                    size_hint:(0.4,None)
                    font_size: 2*self.parent.height/20
                    #width:5*self.parent.width/10
                    #height:self.parent.height/10
                    on_release: root.to_date()

                MDDropDownItem:
                    id:staff_btn
                    text: "Select Staff"
                    md_bg_color:(0,0.9,0.8,1)
                    size_hint:(0.3,None)
                    font_size: 2*self.parent.height/20
                    #width:5*self.parent.width/10
                    #height:self.parent.height/10


                MDDropDownItem:
                    id:v_type_btn
                    text: "V Type"
                    md_bg_color:(0,0.9,0.8,1)
                    size_hint:(0.3,None)
                    font_size: 2*self.parent.height/20
                    #width:5*self.parent.width/10
                    #height:self.parent.height/10

                        

            MDRaisedButton:
                text:"Submit"
                size_hint:(0.2,0.07)
                pos_hint:{'center_x':0.5,'top':0.7}
                on_release:root.generate_report()

        MDLabel:
            id:report_mess
            text:""
            size_hint:1,0.05
            halign:"center"
            theme_text_color:"Custom"
            text_color:(1,0,0,1)






