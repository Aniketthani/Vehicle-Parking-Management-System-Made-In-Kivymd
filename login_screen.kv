<loginscreen>
    MDBoxLayout:
        id:layout
        orientation: 'vertical'

        MDToolbar:
            
            title:"Vehicle Parking Management System"
            
            left_action_items:[["images/pmsicon.png",lambda x:x]]
            elevation:11
            

        MDLabel:
            text:"Login"
            halign:"center"
            theme_text_color: "Custom"
            text_color:0.4,0.2,0.6,1
            font_size: 80
            size_hint: 1,0.1 
            
        MDCard:
            id:card
            size_hint: 0.4,0.3 
            pos_hint: {'center_x':0.5,'center_y':0.5  }
            padding:10
            orientation: 'vertical'
            spacing:20
            focus_behavior:True
            
            
                
            canvas:
                Color:
                    rgba:(0,0,0,0.25)
                Rectangle:
                    pos:self.pos
                    size:self.size
                Color:
                    rgba: (0.5,0,0.9,0.3)
                RoundedRectangle:
                    radius: [40]
                    size: self.size
                    pos: self.pos
            
            MDLabel:
                text:""
                size_hint:1,0.1
            MDTextFieldRound:
                id:username
                hint_text:"Username"
                icon_right:"account"
                font_size: 30
                normal_color: app.theme_cls.accent_color
                color_active: 0,0.8,1,1
                size_hint_x: 0.8
                size_hint_y: None
                height:self.parent.height/10
                
                pos_hint: {'center_x':0.5 ,'center_y':0.3 }
                write_tab:False
                focus:True
            MDTextFieldRound:
                id:password
                hint_text:"Password"
                icon_right:"eye-off"
                font_size: 30
                password:True
                normal_color: app.theme_cls.accent_color
                color_active: 0,0.8,1,1
                size_hint_x: 0.8
                size_hint_y: None
                height:self.parent.height/10
                
                pos_hint: {'center_x':0.5  ,'center_y':0.5}
                write_tab:False
            MDIconButton:
                
                user_font_size: 50#(self.parent.height/15 + self.parent.height/12)/2
                
                icon:"login"
                pos_hint: {'center_x':0.5,'center_y':0.7 }
                #size_hint: (0.2,None)
                on_release: root.validate_login()
            
            MDLabel:
                id:login_error
                text:""
                size_hint:(1,0.1)
                halign:"center"
                theme_text_color:"Custom"
                text_color:(1,0,0,1)
                font_size: 20
                
                
        Widget:
            size_hint:(1,0.1)





    
    